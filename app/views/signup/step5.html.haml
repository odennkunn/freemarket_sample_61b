.km-header
  = render 'shared/km-header'
  .km-sign-up__bar
    %ol.progress-bar.clearfix
      %li.progress-text
        会員情報
        .progress-status.active
          .progress-status-bar.active
      %li.progress-text
        電話番号認証
        .progress-status.active
          .progress-status-bar-step2.active
      %li.progress-text
        お届け先住所入力
        .progress-status.active
          .progress-status-bar-step3.active
      %li.progress-text.active
        支払い方法
        .progress-status.active
          .progress-status-bar-step4
      %li.progress-text
        完了
        .progress-status
.km-main
  .km-main__container
    .km-head__title
      支払い方法
    .km-ragistration-form__inner
      .km-form__wrapper
        .km-form__container
          %label{class: "km-label"}
            カード番号
          .km-form-require
            必須
          %input{class: "km-form", placeholder: "半角数字のみ"}
          .km-form__images
            = image_tag "visad.jpg", class: "card__image"
            = image_tag "ms.png", class: "card__image"
            = image_tag "sai.gif", class: "card__image"
            = image_tag "jcb.gif", class: "card__image"
            = image_tag "ame.gif", class: "card__image"
            = image_tag "din.gif", class: "card__image"
            = image_tag "dis.gif", class: "card__image"
        .km-form__container
          %label{class: "km-label"}
            有効期限
          .km-form-require
            必須
          .km-limit-select__container
            .select-wrap
              = fa_icon 'chevron-down', class: "km-select-arrow"
              %select.select{id: "", name: ""}
                %option{value: ""} 01
                %option{value: ""} 002
                %option{value: ""} 003
            .km-select__info-text
              月
            .select-wrap
              = fa_icon 'chevron-down', class: "km-select-arrow"
              %select.select{id: "", name: ""}
                %option{value: ""} 19
                %option{value: ""} 002
                %option{value: ""} 003
            .km-select__info-text
              年
        .km-form__container
          %label{class: "km-label"}
            セキュリティコード
          .km-form-require
            必須
          %input{class: "km-form", placeholder: "カード背面4桁もしくは3桁の番号"}
        .km-form__container
          .km-form__info-text-right
            = link_to "" do
              = fa_icon 'question-circle'
              カード背面の番号とは？
        .km-form__container
          = link_to complete_signup_signup_index_path, class: "km-submit-next__btn btn-red" do
            次へ進む
= render 'shared/km-footer'
