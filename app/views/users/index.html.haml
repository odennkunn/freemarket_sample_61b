%header.header
  =render 'shared/top-header'
.tncontents
  %nav.tnmypage-nav
    = render 'shared/tn-sidebar'
  .tncontents__right
    .tncontents__right__user
      .tncontents__right__user--avatar
        = image_tag "//static.mercdn.net/images/member_photo_noimage_thumb.png", size: '60x60', alt: '', class: 'tnperson'
      %h1.tncontets__right__user--name
        name
      .tncontents__right__user__number
        .tncontents__right__user__number--review
          評価
          %span 1
        .tncontents__right__user__number--item
          出品数
          %span 1
    .tncontents__right__info
      %ul.tncontents__right__info__lists
        %li.tncontents__right__info__lists--left
          =link_to 'http://google.co.jp', class: 'tninfo' do
            お知らせ
        %li.tncontents__right__info__lists--right
          =link_to 'http://google.co.jp', class: 'tninfo' do
            やることリスト
      %ul.tncontents__right__info__index
