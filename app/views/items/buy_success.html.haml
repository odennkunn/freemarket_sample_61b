.twconfirm____container
  .twconfirm__simple__header__logo
    = link_to root_path do
      = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3791839826"

  .twbuy-main
    .twbuy-main__box
      .twbuy-content
        .twbuy-content__success
          =fa_icon 'history', class: 'icon'
          %p.twbuy-content__success__text1 発想をお待ちください
          %p.twbuy-content__success__text2 出品者からの発送通知をお待ちください
        .twbuy-content__header
          購入完了
        .twbuy-content__product
          .twbuy-content__product__inner
            .twbuy-product-main
              - @item.images.each do |image|
                .twbuy-product-image
                  = image_tag "#{image.image_url}", height: "64" , width: "64px"
                .twbuy-product-name 
                = @item.name
            .twbuy-form
              %p.twbuy-price
                = "¥" + @item.price
                %span 送料込み
        .twbuy-content__user-info
          .twbuy-content__user-info__inner
            %h3 配送先
            .user-info-text
              = "〒#{@item.user.residence.address_number}"
              %br
              = @item.prefecture.name
              = @item.user.residence.municipal
              = @item.user.residence.address
              = @item.user.residence.building
              %br
              = @item.user.family_name
              = @item.user.last_name
        .twbuy-content__return
          = link_to root_path, class: 'twbuy-content__return__button' do
            トップページに戻る


  .twsignup__footer
    .twsignup__footer__detail
      = link_to "プライバシーポリシー   "
      = link_to "メルカリ利用規約   "
      = link_to "特定商取引に関する表記   "
    .twsignup__footer__logo
      = link_to root_path do
        = image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?2482339763", width: "80px"
    %p © 2019 Mercari 